{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-unused-vars": "warn",
      "no-console": "warn",
      "indent": ["error", 2],
      "max-len": ["warn", { "code": 100 }]
    }
  }
